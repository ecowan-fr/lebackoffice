{% if configs['footer_active'] %}
	<footer>
		<div class="container mx-auto flex items-center justify-between border-t pt-4">
			{% for partie in ['left','center','right'] %}
				<div>
					{% if configs['footer_' ~ partie ~ '_type'] == 'logo' %}
						<img data-logolight="{{ asset(logos.light) }}" data-logodark="{{ asset(logos.dark) }}" style="filter: grayscale(100%);" class="h-4 logoprincipal" src="{{ asset(logos.light) }}" alt="Logo lebackoffice">
					{% elseif configs['footer_' ~ partie ~ '_type'] == 'text' %}
						<p class="text-sm text-gray-400">{{ configs['footer_' ~ partie ~ '_text'] }}</p>
					{% elseif configs['footer_' ~ partie ~ '_type'] == 'timbre' %}
						{% set file = 'public/images/timbre_classification/' ~ classification|default('restreint') ~ '_timbre.svg' %}
						{% if fileExist(file) %}
							<img class="h-10" src="{{ asset(file) }}" alt="timbre">
						{% else %}
							<img class="h-10" src="{{ 'https://cdn.ecowan.fr/classification/' ~ classification|default('restreint') ~ '_timbre.svg' }}" alt="timbre">
						{% endif %}
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</footer>
{% else %}
	<div class="block pt-10"></div>
{% endif %}
