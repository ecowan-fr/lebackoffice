{% extends 'base.html.twig' %}

{% set classification = 'confidentiel' %}

{% block title 'Settings'|trans({}, 'settings') %}

{% block body %}
	<div class="flex h-full justify-center items-center pt-10">
		<div class="grid sm:grid-cols-2 md:grid-cols-3 gap-12">
			{% if is_granted('settings.main.view') %}
				<a href="{{ path('settings.main.index') }}" class="card_setting waves-effect">
					<img src="{{ asset('images/icons/settings.png') }}" alt="settings">
					<p class="text-3xl">{{ 'General'|trans({}, 'settings') }}</p>
				</a>
			{% endif %}
			{% if
					is_granted('settings.services.vmware.view') or
					is_granted('settings.services.pterodactyl.view') or
					is_granted('settings.services.plesk.view') or
					is_granted('settings.services.domains.view') or
					is_granted('settings.services.licences.view')
				%}
				<a href="#" class="card_setting waves-effect">
					<img src="{{ asset('images/icons/basket.png') }}" alt="settings">
					<p class="text-3xl">Services</p>
				</a>
			{% endif %}
			{% if is_granted('settings.payments.view') %}
				<a href="#" class="card_setting waves-effect">
					<img src="{{ asset('images/icons/credit_card.png') }}" alt="settings">
					<p class="text-xl">{{ 'Payment methods'|trans({}, 'settings') }}</p>
				</a>
			{% endif %}
			{% if is_granted('settings.billings.view') %}
				<a href="#" class="card_setting waves-effect">
					<img src="{{ asset('images/icons/checklist.png') }}" alt="settings">
					<p class="text-3xl">{{ 'Billing'|trans({}, 'settings') }}</p>
				</a>
			{% endif %}
			{% if is_granted('settings.security.view') %}
				<a href="{{ path('settings.security.index') }}" class="card_setting waves-effect">
					<img src="{{ asset('images/icons/lock.png') }}" alt="settings">
					<p class="text-3xl">{{ 'Security'|trans({}, 'settings') }}</p>
				</a>
			{% endif %}
			{% if is_granted('settings.users.view') %}
				<a href="{{ path('settings.users.index') }}" class="card_setting waves-effect">
					<img src="{{ asset('images/icons/crown.png') }}" alt="settings">
					<p class="text-3xl">{{ 'Users'|trans({}, 'settings') }}</p>
				</a>
			{% endif %}
		</div>
	</div>
{% endblock %}
